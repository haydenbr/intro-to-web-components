{
  "compilerOptions": {
    "target": "es6",
		"module": "es2015",
		"moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist"]
}
